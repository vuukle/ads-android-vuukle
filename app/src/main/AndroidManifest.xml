<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vuukle.ads">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VuukleAdsAndroid"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7538703090817389~3161178947" />

        <activity
            android:name=".view.activity.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.ads.BannerActivity"
            android:exported="true"/>
        <activity android:name=".view.activity.ads.FluidActivity"
            android:exported="true"/>
        <activity android:name=".view.activity.ads.FullBannerActivity"
            android:exported="true"/>
        <activity android:name=".view.activity.ads.LargeBannerActivity"
            android:exported="true"/>
        <activity android:name=".view.activity.ads.MediumRectangleActivity"
            android:exported="true"/>
        <activity android:name=".view.activity.VuukleAdsActivity"
            android:exported="true"/>
    </application>

</manifest>